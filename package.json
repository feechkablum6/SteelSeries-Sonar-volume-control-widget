{
  "name": "sonar-glass-widget",
  "version": "1.0.0",
  "description": "Desktop widget for SteelSeries Sonar volume control with glassmorphism UI",
  "main": "main.js",
  "author": "StellGG",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "koffi": "^2.8.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.stellgg.sonar-widget",
    "productName": "Sonar Glass Widget",
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "renderer.js",
      "audio-controller.js",
      "index.html",
      "styles.css",
      "icon.ico"
    ]
  }
}
